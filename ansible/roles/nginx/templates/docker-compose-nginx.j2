version: '3.9'

services:
  nginx:
    image: nginx:alpine
    ports:
      - "{{ nginx_port }}:80"
    volumes:
      - ./nginx/default.conf:/etc/nginx/conf.d/default.conf:ro
    networks:
      - {{ docker_network }}
    restart: unless-stopped
    depends_on:
      - app

networks:
  {{ docker_network }}:
    driver: bridg
